{
  "name": "node-tdd",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon src/server.js",
    "mocha": "NODE_ENV=test node_modules/.bin/mocha",
    "test": "NODE_ENV=test node_modules/.bin/mocha __tests__/*.js --timeout 10000",
    "test:cov": "NODE_ENV=test nyc --reporter=text ./node_modules/.bin/mocha __tests__/*.js --timeout 10000",
    "test:html": "NODE_ENV=test nyc --reporter=lcov ./node_modules/.bin/mocha __tests__/*.js --timeout 10000",
    "lint": "./node_modules/.bin/eslint --fix \"./src/**/*.js\""
  },
  "dependencies": {
    "date-fns": "^2.16.1",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/mocha": "types/mocha",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.10.0",
    "husky": "^4.3.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "cz-conventional-changelog": "^3.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "concurrently -r \"yarn lint\"",
      "pre-push": "concurrently -r \"yarn test\"",
      "prepare-commit-msg": "exec < /dev/tty && ./node_modules/.bin/git-cz --hook || true",
      "post-merge": "yarn"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
